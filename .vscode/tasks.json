{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-std=c++17",
                "-g",
                "${workspaceFolder}/array/main.cpp",
                "${workspaceFolder}/intro/intro.cpp",
                "-pthread",
                "-o",
                "${workspaceFolder}/array/main"
            ],
            "problemMatcher":[]
        },
        {
            "label": "run",
            "type":  "shell",
            "command": "${workspaceFolder}/array/main",
            "dependsOn":[
                "build"
            ],
            "problemMatcher":[]
        }
    ]
}